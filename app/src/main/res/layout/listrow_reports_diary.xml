<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- This file represents a single row of data retrieved from the database -->
    <TextView
        android:id="@+id/txtReportsDiaryID"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtReportsDiaryTitle"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/txtReportsDiaryID"
        android:padding="3dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtReportsDiaryMood"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@id/txtReportsDiaryTitle"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtReportsDiaryDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/txtReportsDiaryMood"
        android:maxLines="5"
        android:padding="3dp"
        android:visibility="visible" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtReportsTGTsID"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtReportsTGTs1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/txtReportsTGTsID"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtReportsTGTs2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@id/txtReportsTGTs1"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtReportsTGTs3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/txtReportsTGTs2"
        android:maxLines="5"
        android:padding="3dp"
        android:visibility="visible" />

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moodr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkPrimary</item>
        <item name="colorPrimaryVariant">@color/DarkPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkSecondary</item>
        <item name="colorSecondaryVariant">@color/DarkSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorFeelingSad">@color/feelingSadDark</item>
        <item name="colorFeelingDown">@color/feelingDownDark</item>
        <item name="colorFeelingOkay">@color/feelingOkayDark</item>
        <item name="colorFeelingGood">@color/feelingGoodDark</item>
        <item name="colorFeelingHappy">@color/feelingHappyDark</item>
    </style>
</resources>